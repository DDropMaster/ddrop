                                    <Grid>
                                        <Button Grid.Row="0" Grid.Column="0" Name="AddPlots"
                                        HorizontalAlignment="Left" Margin="10,6,0,0"
                                        VerticalAlignment="Top" Width="27" Background="{x:Null}"
                                        BorderBrush="{x:Null}" Height="27" Click="AddPlots_OnClick"
