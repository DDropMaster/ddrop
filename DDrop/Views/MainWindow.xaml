                                                            <CheckBox 
                                                                Height="15" 
                                                                x:Name="ChooseAllSeries" 
                                                                IsChecked="{Binding ElementName=AppMainWindow, Path=AllSelectedPlots, UpdateSourceTrigger=PropertyChanged}" 
